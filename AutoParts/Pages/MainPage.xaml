<Page x:Class="AutoParts.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoParts.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="Главное меню">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Source="\Resourses\image.jpg" Grid.Row="1" Margin="25,55,25,0"/>
        <Menu Grid.Row="1" Background="White" HorizontalAlignment="Center" VerticalAlignment="Top">
            <MenuItem x:Name="clientsMI" Header="Клиенты" Click="clientsMI_Click" FontSize="25" FontFamily="MS Gothic" Grid.RowSpan="2" Background="#FFFFC054"/>
            <MenuItem x:Name="typeAutoPartsMI" Header="Виды запчастей" Click="typeAutoPartsMI_Click" FontSize="25" FontFamily="MS Gothic" Grid.RowSpan="2" Background="#FFFFC054"/>
            <MenuItem x:Name="autoPartsMI" Header="Запчасти" Click="autoPartsMI_Click" FontSize="25" FontFamily="MS Gothic" Grid.RowSpan="2" Background="#FFFFC054"/>
            <MenuItem x:Name="providersMI" Header="Поставщики" Click="providersMI_Click" FontSize="25" FontFamily="MS Gothic" Grid.RowSpan="2" Background="#FFFFC054"/>
            <MenuItem x:Name="supplyMI" Header="Поставка" Click="supplyMI_Click" FontSize="25" FontFamily="MS Gothic" Grid.RowSpan="2" Background="#FFFFC054"/>
            <MenuItem x:Name="saleMI" Header="Продажа" Click="saleMI_Click" FontSize="25" FontFamily="MS Gothic" Grid.RowSpan="2" Background="#FFFFC054"/>
        </Menu>
        <Canvas Background="#FFFFC054" Grid.Row="3"/>
        <TextBlock Text="Автозапчасти" FontSize="40" FontFamily="MS Gothic" Height="42" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Page>
